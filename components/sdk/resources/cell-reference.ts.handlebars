/**
 * Reference to the {{cellOrg}} organization's {{cellName}} cell image instance which can be used
 * to get details about the APIs exposed by the the cell. This information is only relevant for calls
 * within the cellery system.
 */
export class {{handleTypeName cellName}}Reference {
    private readonly cellOrg: string = "{{cellOrg}}";
    private readonly cellName: string = "{{cellName}}";
    private readonly cellVersion: string = "{{cellVersion}}";
    private readonly instanceName: string = "";

    constructor(instanceName: string) {
        this.instanceName = instanceName;
    }

    /**
     * Get the Host name of the Cell Gateway. This hostname can be used when accessing the APIs.
     *
     * @returns The host name of the Cell Gateway
     */
    public getHost(): string {
        return this.instanceName + "--gateway-service";
    }

{{#ingresses}}
    /**
     * Get the complete URL of the "{{ingress.basePath}}" API exposed by the cell gateway.
     * This URL can be used when accessing the "{{ingress.basePath}}" API.
     * The URL of the "{{ingress.basePath}}" API
     */
    public get{{handleApiName ingress.basePath}}ApiUrl(): string {
{{#if ingress.basePath}}
        return this.get{{handleApiName ingress.basePath}}ApiProtocol() + "://" + this.getHost() + ":"
                + this.get{{handleApiName ingress.basePath}}ApiPort()
                + this.get{{handleApiName ingress.basePath}}ApiContext();
{{else}}
            return this.get{{handleApiName ingress.basePath}}ApiProtocol() + "://" + this.getHost() + ":"
                + this.get{{handleApiName ingress.basePath}}ApiPort();
{{/if}}
    }

    /**
     * Get the protocol of the "{{ingress.basePath}}" API exposed by the cell gateway.
     * This protocol can be used when accessing the "{{ingress.basePath}}" API.
     *
     * @returns The protocol of the "{{ingress.basePath}}" API
     */
    public get{{handleApiName ingress.basePath}}ApiProtocol(): string {
        return "{{protocol}}";
    }

    /**
     * Get the port which exposes the "{{ingress.basePath}}" API exposed by the cell gateway.
     * This port can be used when accessing the "{{ingress.basePath}}" API.
     *
     * @returns The port which exposes the "{{ingress.basePath}}" API
     */
    public get{{handleApiName ingress.basePath}}ApiPort(): number {
        return {{../cellGatewayPort}};
    }

{{#if ingress.basePath}}
    /**
     * Get the context of the "{{ingress.basePath}}" API exposed by the cell gateway.
     * This context path can be used when accessing the "{{ingress.basePath}}" API.
     *
     * @returns The context of the "{{ingress.basePath}}" API
     */
    public get{{handleApiName ingress.basePath}}ApiContext(): string {
        return "{{ingress.basePath}}";
    }
{{/if}}
{{/ingresses}}
}
